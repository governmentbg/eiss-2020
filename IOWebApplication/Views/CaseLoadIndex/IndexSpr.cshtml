@using IOWebApplication.Infrastructure.Models.ViewModels.Case
@model CaseLoadIndexFilterVM

@{
    ViewData["Title"] = "Натовареност по дела: основни и допълнителни дейности";
}

@section breadcrumb{
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","Home")" title="Начало"><i class="fa fa-home"></i></a></li>
        <li class="active">@ViewData["Title"]</li>
    </ol>
}

<div class="filter-form">
    <div class="row">
        <div class="col-lg-3">
            @Html.EditorFor(m => m.DateFrom, "DateTime")
        </div>
        <div class="col-lg-3">
            @Html.EditorFor(m => m.DateTo, "DateTime")
        </div>
    </div>

    <div class="row">
        <div class="col-lg-3">@Html.EditorFor(x => x.CaseGroupId, "GenericDropDown")</div>
        <div class="col-lg-3">@Html.EditorFor(x => x.CaseTypeId, "GenericDropDown")</div>
        <div class="col-lg-3">@Html.EditorFor(x => x.CaseCodeId, "CaseCode", null, new { caseTypeContainer = "#CaseTypeId" })</div>
        <div class="col-lg-3">@Html.EditorFor(x => x.RegNumber)</div>
    </div>

    <div class="row">
        <div class="col-lg-3">@Html.EditorFor(x => x.LawUnitId, "LawUnit", null, new { lawUnitTypes = "1" })</div>
        <div class="col-lg-3">@Html.EditorFor(x => x.CourtDepartmentId, "GenericDropDown")</div>
        <div class="col-lg-3">@Html.EditorFor(x => x.CourtDepartmentOtdelenieId, "GenericDropDown")</div>
    </div>

    <div class="row">
        <div class="col-lg-3">@Html.EditorFor(m => m.SessionResultId, "GenericDropDown")</div>
        <div class="col-lg-3">@Html.EditorFor(m => m.SessionTypeId, "GenericDropDown")</div>
        <div class="col-lg-3">@Html.EditorFor(m => m.ActTypeId, "GenericDropDown")</div>
    </div>

    <div class="row">
        <div class="col-md-6 text-left pb-15">
            <button type="button" class="btn btn-primary" id="btnFilter" onclick="LoadTable()" value="Филтриране" title="Филтриране">
                Филтриране
                <i class="fa fa-search" title="Търсене"></i>
            </button>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 col-md-12">
        <table id="mainTable" class="table table-hover table-striped"></table>
    </div>
</div>



<script>
    function LoadTable() {
        if ($.fn.dataTable.isDataTable('#mainTable')) {
            refreshTable('#mainTable');
        }
        else {
            $('#mainTable').DataTable({
                ajax: {
                    "url": "@Url.Action("ListDataSpr")",
                    "type": "POST",
                    "datatype": "json",
                    "data": function (d) {
                        d.model = {
                            DateFrom: $("#DateFrom").val(),
                            DateTo: $("#DateTo").val(),
                            LawUnitId: $("#LawUnitId").val(),
                            CaseGroupId: $("#CaseGroupId").val(),
                            CaseTypeId: $("#CaseTypeId").val(),
                            CaseCodeId: $("#CaseCodeId").val(),
                            RegNumber: $("#RegNumber").val(),
                            CourtDepartmentId: $("#CourtDepartmentId").val(),
                            CourtDepartmentOtdelenieId: $("#CourtDepartmentOtdelenieId").val(),
                            SessionResultId: $("#SessionResultId").val(),
                            SessionTypeId: $("#SessionTypeId").val(),
                            ActTypeId: $("#ActTypeId").val()
                        };
                    }
                },
                filter:false,
                columns: [
                    {
                        name: 'caseName',
                        data: 'caseName',
                        title: 'Дело',
                        sortable: true,
                        searchable: false
                    },
                    {
                        name: 'lawUnitName',
                        data: 'lawUnitName',
                        title: 'Име',
                        sortable: true,
                        searchable: false
                    },
                    {
                        name: 'calcValue',
                        data: 'calcValue',
                        title: 'Натоварване',
                        sortable: true,
                        searchable: false
                    },
                    {
                        name: 'actions',
                        data: "id",
                        title: "",
                        width: 100,
                        sortable: false,
                        searchable: false,
                        className: "text-center noExport",
                        "render": function (data, type, row) {
                            return TemplateToHtml('#templateEdit', row);
                        }
                    }
                ]
            });
        }
    }
</script>

<script id="templateEdit" type="text/x-handlebars-template">
    <div class="row">
        <a href="@Url.Action("CasePreview", "Case")/{{caseId}}" class="btn btn-def btn-sm" title="Дело"><i class="fa fa-eye"></i><span class="hidden-sm hidden-xs"></span></a>
    </div>
</script>

<script>
    $(function () {
        initLawUnit();
        initCaseCode();
    });
</script>

@section scripts {
    <script>
        $(document).ready(function () {
            $('#CaseGroupId').trigger('change');
        });

        $('#CaseGroupId').change(function () {
            requestCombo('@Url.Action("GetDDL_CaseType","Ajax")', { CaseGroupId: $(this).val() }, '#CaseTypeId', @Model.CaseTypeId, function () { $('#CaseTypeId').trigger('change') });
        });

    </script>
}
