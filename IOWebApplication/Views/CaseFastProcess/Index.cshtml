            , {Id:id}
            , function (data) {
                if (data.result == true) {
                    cmcLoadData("");
                    messageHelper.ShowSuccessMessage('Записът е изтрит успешно.');
                } else {
                    cmcLoadData("");
                    messageHelper.ShowErrorMessage('Грешка при изтриване.');
                }
            });
