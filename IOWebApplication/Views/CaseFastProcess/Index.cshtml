    function cfpCaseFastProces() {
        requestContent('@Url.Action("CaseFastProcess", "CaseFastProcess")'
            , { caseId:@Model }
            , function (data) {
                ShowModalDialog('Добавяне/редакция на допълнителна иформация', data, true);
            });
