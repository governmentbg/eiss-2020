@model IOWebApplication.Infrastructure.Models.ViewModels.TinyMCEVM;

@{
    ViewData["Title"] = "Преглед";
    IAccessControl access = (IAccessControl)ViewBag.AccessControl;
    var filterJson = ViewBag.filterJson;
}

@section breadcrumb{
    @if (ViewBag.breadcrumbs != null)
    {
        <partial name="Breadcrumbs" model="@(List<IOWebApplication.Infrastructure.Models.ViewModels.Common.BreadcrumbsVM>)ViewBag.breadcrumbs" />
    }
}
<style>
    table.mce-item-table, .mce-item-table td, .mce-item-table th, .mce-item-table caption {
        border: none;
    }
</style>
<form id="formEditTinyMCE" method="post" action="@Url.Action("EditTinyMCESave")">
    @Html.HiddenFor(x => x.Style)
    @Html.HiddenFor(x => x.DocStyle)
    @Html.HiddenFor(x => x.Id)
    @Html.HiddenFor(x => x.SourceId)
    @Html.HiddenFor(x => x.SourceType)
    @Html.HiddenFor(x => x.SmartShrinkingPDF)
    @Html.HiddenFor(x => x.PageOrientation)
    @Html.HiddenFor(x => filterJson)
    <div class="row">
        <div class="col-lg-8">
            <fieldset class="is-fieldset">
                <legend class="legend_1"> Текст</legend>
                <div>@Html.TextAreaFor(model => model.Text)</div>
            </fieldset>
        </div>
        <div class="col-lg-4">
            <fieldset class="is-fieldset">
                <legend class="legend_1"> Добавяне на параметър</legend>
                <input id="NewParam" name="NewParam" value="" style="width:90%"> </input>
                <a href="#" title="Добави" class="btn btn-def btn-sm" onclick="AddCodeInText($('#NewParam').val()); return false;"><i class="fa fa-plus"></i></a>
            </fieldset>
            <fieldset class="is-fieldset">
                <legend class="legend_1"> Параметри</legend>
                <div><partial name="../HtmlTemplate/_Param.cshtml" /></div>
            </fieldset>
        </div>
    </div>
    <div>
        <button type="submit" class="btn btn-success">Запис</button>
        @await Html.PartialAsync("_ButtonClose")
    </div>
</form>
<form name="formPostFilter" id="formPostFilter" action="@Url.Action("Index")" method="post">
    @Html.HiddenFor(x => filterJson)
</form>
@section scripts {
    <script>
        tinymce.init({
            selector: 'textarea#Text',
            height: 800,
            menubar: 'file edit view insert format tools table tc help',
            plugins: [
                'advlist autolink lists link image charmap print preview anchor',
                'searchreplace visualblocks code fullscreen',
                'insertdatetime media table paste code help wordcount'
            ],
            toolbar: 'undo redo | formatselect | bold italic backcolor | fontselect fontsizeselect formatselect | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | removeformat | help',
            visual_table_class : "table",
            table_default_attributes: { border : 0},
            content_css: [
                '@Url.Action("Preview", "HtmlTemplate", new { id = Model.Id})/style.css',
                '/css/tinymce-generic-styles.css'
            ]
        });
        function postToFilterHtmlTemplate() {
            $("#formPostFilter").submit();
        }
    </script>
}