@model CaseMainDataVM
@using IOWebApplication.Infrastructure.Models.ViewModels
@using Microsoft.Extensions.Configuration
@using IOWebApplication.Infrastructure.Constants
@inject IConfiguration configuration;
@{
    IAccessControl access = (IAccessControl)ViewBag.AccessControl;
}

@if (access.CanChange)
{
    <div class="row">
        <div class="col-md-12 text-right pb-15">
            <a asp-controller="CaseLawyerHelp" asp-action="Add" asp-route-caseId="@Model.Id" class="btn btn-success btn-sm">
                <i class="fa fa-plus"></i>
                Добави искане за правна помощ
            </a>
        </div>
    </div>
}

<div class="row">
    <div class="col-md-12">
        <table id="caseLawyerHelpMainTable" class="table table-hover table-striped"></table>
    </div>
</div>


<script>
        $(function () {
            var table = $('#caseLawyerHelpMainTable').DataTable({
                ajax: {
                    "url": "@Url.Action("ListData", "CaseLawyerHelp")",
                    "type": "POST",
                    "datatype": "json",
                    data: function (d) {
                        d.caseId = @Model.Id;
                    }

                },
                deferLoading: deferLoadingOnTab('#caseLawyerHelpMainTable'),
                columns: [
                    {
                        name: 'lawyerHelpBaseText',
                        data: 'lawyerHelpBaseText',
                        title: 'Основание за изпращане на искането',
                        sortable: true,
                        searchable: true
                    },
                    {
                        name: 'lawyerHelpTypeText',
                        data: 'lawyerHelpTypeText',
                        title: 'Вид правна помощ',
                        sortable: true,
                        searchable: true
                    },
                    {
                        name: 'actions',
                        data: "id",
                        title: "",
                        sortable: false,
                        searchable: false,
                        className: "text-center noExport",
                        "render": function (data, type, row) {
                            return TemplateToHtml('#caseLawyerHelpTemplateEdit', row);
                        }
                    }
                ]
            });
        });
</script>

<script id="caseLawyerHelpTemplateEdit" type="text/x-handlebars-template">
    @if (access.CanChange)
    {
        <a href="@Url.Action("Edit", "CaseLawyerHelp")?id={{id}}" class="btn btn-warning btn-sm" title="Редакция"><i class="fa fa-edit"></i><span class="hidden-sm hidden-xs"></span></a>
    }
    else
    {
        <a href="@Url.Action("Edit", "CaseLawyerHelp")?id={{id}}" class="btn btn-def btn-sm" title="Преглед"><i class="fa fa-eye"></i><span class="hidden-sm hidden-xs"></span></a>
    }
</script>


