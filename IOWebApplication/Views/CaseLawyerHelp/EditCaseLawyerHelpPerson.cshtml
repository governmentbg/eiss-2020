@model CaseLawyerHelpPerson
@using IOWebApplication.Infrastructure.Data.Models.Cases

@{
    if (Model.Id > 0)
    {
        ViewData["Title"] = "Данни за служебен защитник";
    }
    else
    {
        ViewData["Title"] = "Данни за служебен защитник";
    }

    IAccessControl access = (IAccessControl)ViewBag.AccessControl;
}

@section breadcrumb{
    @if (ViewBag.breadcrumbs != null)
    {
        <partial name="Breadcrumbs" model="@(List<IOWebApplication.Infrastructure.Models.ViewModels.Common.BreadcrumbsVM>)ViewBag.breadcrumbs" />
    }
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="EditCaseLawyerHelpPerson" method="post">
            @Html.HiddenFor(x => x.Id)
            @Html.HiddenFor(x => x.CaseLawyerHelpId)

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div id="saveContainer">
                <partial name="_SaveFormContent" model="@("#saveContainer")" />

                <fieldset class="is-fieldset">
                    <legend class="legend_1" data-position="BankAccount"> Основни данни</legend>
                    <div class="col-lg-6">@Html.EditorFor(x => x.CasePersonId, "GenericDropDown")</div>
                    <div class="col-lg-6">@Html.EditorFor(m => m.SpecifiedLawyerLawUnitId, "LawUnit", null, new { lawUnitTypes = "7" })</div>
                    <div class="col-lg-12">@Html.EditorFor(x => x.AssignedLawyerId, "GenericDropDown")</div>
                </fieldset>
            </div>

            <div class="form-group">
                <input type="submit" value="Запис" class="btn btn-success single-click-submit" />
                <a asp-controller="CaseLawyerHelp" asp-action="Edit" asp-route-id="@Model.CaseLawyerHelpId" class="btn btn-danger">Назад</a>
                @if (Model.Id > 0)
                {
                    <div class="pull-right">
                        @if (access.CanChangeFull)
                        {
                            @await Html.PartialAsync("_ExpiredInfoButton", new ExpiredInfoVM() { Id = Model.Id, DialogTitle = "Премахване на лице", ExpireSubmitUrl = Url.Action("CaseLawyerHelpPerson_ExpiredInfo") })
                            <span>&nbsp;</span>
                        }
                        @await Html.PartialAsync("_ShowLogOperation", new IOWebApplication.Core.Models.ShowLogModel() { ObjectKey = Model.Id.ToString() })
                    </div>
                }
            </div>
        </form>
    </div>
</div>

@section scripts {
    <script>
        $(function () {
            initLawUnit();
        });
    </script>
}