@model UserProfileRegisterVM
@using IOWebApplication.Infrastructure.Models.ViewModels.Account
@using IOWebApplication.Infrastructure.Constants 
@{
    ViewData["Title"] = "Регистриране на потребител";
}
@section breadcrumb{
    @if (ViewBag.breadcrumbs != null)
    {
        <partial name="Breadcrumbs" model="@(List<IOWebApplication.Infrastructure.Models.ViewModels.Common.BreadcrumbsVM>)ViewBag.breadcrumbs" />
    }
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="Register" method="post" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div id="saveContainer">
                @Html.EditorFor(x => x.LawUnitId, "LawUnit", null, new { selectMode = NomenclatureConstants.LawUnitSelectMode.Current, lawUnitTypes = "1,2,5,6" })
                @Html.EditorFor(x => x.Email)
                @if (IOWebApplication.Infrastructure.Constants.AccountConstants.PasswordLoginEnabled)
                {
                    @Html.EditorFor(x => x.Password, "Password")
                    @Html.EditorFor(x => x.Password2, "Password")
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Запис" class="btn btn-success single-click-submit" />
                <a asp-action="Index" class="btn btn-danger">Назад</a>
            </div>
        </form>
    </div>
</div>

<script>
    $(function () {
        initLawUnit();
    });
</script>