@model ProbationMeasure
@using IOWebApplication.Infrastructure.Models.Integrations.Eispp
@{
    var currentHtmlPrefix = ViewData.TemplateInfo.HtmlFieldPrefix;
    var indexPrefix = currentHtmlPrefix.Replace($".ProbationMeasures[{Model.Index}]", ".ProbationMeasures.Index");
}
<div class="pbc-measure-container eispp-checkbox-container">
    <fieldset class="is-fieldset">
        <legend class="legend_1">@Html.EditorFor(x => x.IsSelected, "EisppBoolean", null, null)</legend>
        @Html.HiddenFor(x => x.MeasureId)
        <input type="hidden" name="@indexPrefix" value="@Model.Index" />
        <div class="row">
            <div class="col-lg-2">@Html.EditorFor(x => x.MeasureType, "EisppDropDown", null, new { Ddl = ViewBag.ProbationMeasureTypeDDL, @class = "pbc-measure-type" })</div>
            <div class="col-lg-2 pbc-measure-unit-container">@Html.EditorFor(x => x.Unit, "EisppDropDown", null, new { Ddl = ViewBag.MeasureUnitDDL, @class = "pbc-measure-unit" })</div>
            <div class="col-lg-2 pbc-measure-unit-container">@Html.EditorFor(x => x.MeasureAmount)</div>
            <div class="col-lg-2">@Html.EditorFor(x => x.ValidFromVM, "EisppDateTime", null, new { flags = 5 })</div>
            <div class="col-lg-2">@Html.EditorFor(x => x.ValidTillVM, "EisppDateTime", null, new { flags = 5 })</div>
        </div>
        <div class="row">
            <div class="col-lg-2">@Html.EditorFor(x => x.Years)</div>
            <div class="col-lg-2">@Html.EditorFor(x => x.Months)</div>
            <div class="col-lg-2">@Html.EditorFor(x => x.Days)</div>
        </div>
    </fieldset> 
</div>

<script>
    $(function () {
        initDatePicker();
        setCrimePunishmentKind();
    });
</script>