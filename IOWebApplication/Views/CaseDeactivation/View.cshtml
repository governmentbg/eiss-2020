@model CaseDeactivationVM
@using IOWebApplication.Infrastructure.Models.ViewModels.Case
@using IOWebApplication.Infrastructure.Models.ViewModels.Common
@{

    ViewData["Title"] = "Протокол за анулиране";
}

@section breadcrumb{
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","Home")" title="Начало"><i class="fa fa-home"></i></a></li>
        <li><a href="@Url.Action("Index")">@CaseDeactivationVM.RegisterName</a></li>
    </ol>
}

<div class="row">
    <div class="col-md-8">
        <fieldset class="is-fieldset">
            <legend class="legend_1"> Основни данни</legend>
            <div class="cdn-files" data-sourcetype="@SourceTypeSelectVM.CaseDeactivate" data-sourceid="@Model.Id" data-editmode="none"></div>
            @Html.Raw(ViewBag.html)
        </fieldset>
        <div class="form-group">
            <a asp-action="Index" class="btn btn-danger">Назад</a>
            @if (Model.DeclaredDate == null)
            {
                <a asp-action="SendForSign" asp-route-id="@Model.Id" class="btn btn-success">Подписване</a>

                <div class="pull-right">
                    @await Html.PartialAsync("_ExpiredInfoButton", new ExpiredInfoVM() { Id = Model.Id, DialogTitle = "Премахване на протокол за анулиране на дело", ExpireSubmitUrl = Url.Action("ExpiredInfo") })
                </div>
            }
        </div>
    </div>
</div>
@section scripts {
    <partial name="_CdnScript" />
}
