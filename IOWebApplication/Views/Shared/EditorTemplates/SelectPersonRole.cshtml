@model int?
@using IOWebApplication.Infrastructure.Extensions
@{
    var fieldName = ViewData.TemplateInfo.HtmlFieldPrefix.Replace(".", "_") + "_prole";
    var label = (string)ViewData["label"];
    var addClass = "";
    if (string.IsNullOrEmpty(label))
    {
        addClass = "form-group";
    }
    var reqClass = ViewData.ModelMetadata.GetIOReqClass();
}

<div class="personrole-container @addClass">
    @if (string.IsNullOrEmpty(label))
    {
        <label asp-for="@Model" class="control-label @reqClass"></label>
        <input id="@fieldName" name="@fieldName" class="form-control personrole-control" autocomplete="false" />
    }
    else
    {
        <input id="@fieldName" name="@fieldName" class="form-control personrole-control" autocomplete="false" placeholder="@label" />
    }
    <input asp-for="@Model" type="hidden" class="personrole-val" />
    <span asp-validation-for="@Model" class="text-danger"></span>
    <div id="@String.Format("{0}list", fieldName)" style="z-index:1050;"></div>
</div>
