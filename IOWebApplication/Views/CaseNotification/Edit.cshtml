                if ($("#NotificationTypeId").val() != notificationTypeId) {
                    $("#NotificationTypeId").prop("selectedIndex", 0);
                };
                $("#NotificationTypeId").change();
            } else {
                $("#NotificationTypeDiv").hide();
            }
            if (isNotificationDeliveryGroupIdOnMomment)
