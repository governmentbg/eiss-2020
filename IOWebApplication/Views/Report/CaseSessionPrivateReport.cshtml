@using IOWebApplication.Infrastructure.Models.ViewModels.Report
@using IOWebApplication.Infrastructure.Constants
@using IOWebApplication.Infrastructure.Contracts
@inject IUserContext userContext
@model CaseSessionPrivateFilterReportVM

@{
    ViewData["Title"] = "Книга за закрити и разпоредителни заседания";
}

@section breadcrumb{
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","Home")" title="Начало"><i class="fa fa-home"></i></a></li>
        <li class="active">@ViewData["Title"]</li>
    </ol>
}

<form id="formFilter" method="post">
    <div class="row">
        <div class="col-lg-2">@Html.EditorFor(m => m.DateFrom, "DateTimeWithTime")</div>
        <div class="col-lg-2">@Html.EditorFor(m => m.DateTo, "DateTimeWithTime")</div>
        <div class="col-lg-3">@Html.EditorFor(m => m.CaseGroupId, "GenericDropDown")</div>
    </div>
    <div class="row">
        <div class="col-lg-4">@Html.EditorFor(x => x.JudgeReporterId, "LawUnit", null, new { lawUnitTypes = NomenclatureConstants.LawUnitTypes.Judge.ToString(), courtId = userContext.CourtId })</div>
        <div class="col-lg-3">@Html.EditorFor(m => m.DepartmentId, "GenericDropDown")</div>
    </div>
    <div class="row">
        <div class="col-md-6 text-left pb-15">
            <button type="submit" class="btn btn-primary">
                Експорт в Excel
                <i class="fa fa-file-excel-o" title="Търсене"></i>
            </button>
        </div>
    </div>
</form>

@section scripts {
    <script>
        initLawUnit();
    </script>
}