        </div>
        <div class="col-lg-3">@Html.EditorFor(x => x.JudgeReporterId, "LawUnit", null, new { selectMode = NomenclatureConstants.LawUnitSelectMode.CurrentWithHistoryNoVAS, lawUnitType = NomenclatureConstants.LawUnitTypes.Judge })</div>
    </div>
    <div class="row">
        <div class="col-lg-3">@Html.EditorFor(x => x.CaseGroupIds, "GenericDropDownMultiple")</div>
        <div class="col-lg-3">@Html.EditorFor(x => x.CaseTypeIds, "GenericDropDownMultiple")</div>
        @*<div class="col-lg-3">@Html.EditorFor(x => x.CaseGroupId, "GenericDropDown")</div>
            <div class="col-lg-3">@Html.EditorFor(x => x.CaseTypeId, "GenericDropDown")</div>*@
        <div class="col-lg-3">@Html.EditorFor(x => x.CaseCodeId, "CaseCode", null, new { caseTypeContainer = "#CaseTypeIds_text" })</div>
        <div class="col-lg-3">@Html.EditorFor(x => x.RegNumber)</div>
    </div>
    <div class="row">
        <div class="col-lg-3">@Html.EditorFor(x => x.DocumentNumber)</div>
        <div class="col-lg-3">@Html.EditorFor(x => x.CaseClassificationId, "GenericDropDown")</div>
        <div class="col-lg-2">@Html.EditorFor(x => x.CaseStateId, "GenericDropDown")</div>
        <div class="col-lg-2">@Html.EditorFor(x => x.CourtDepartmentId, "GenericDropDown")</div>
        <div class="col-lg-2">@Html.EditorFor(x => x.CourtDepartmentOtdelenieId, "GenericDropDown")</div>
    </div>

    <div class="row">
        <div class="col-md-6 text-left pb-15">
            <button type="button" class="btn btn-primary filter-button" id="btnFilter" onclick="LoadTable()" value="Филтриране" title="Филтриране">
                Филтриране
                <i class="fa fa-search" title="Търсене"></i>
            </button>
        </div>
    </div>
</div>
