<div class="row">
    <div class="col-lg-12 col-md-12">
        <table id="mainTable" class="table table-hover table-striped"></table>
    </div>
</div>

@section scripts {
    <script>
        localStorage.removeItem('activeTabCase');

        $(document).ready(function () {
            $('#CaseGroupIds').select2({
            });
            $('#CaseTypeIds').select2({
            });
        });

        $('#CaseGroupId').change(function () {
            requestCombo('@Url.Action("GetDDL_CaseType","Ajax")', { CaseGroupId: $(this).val() }, '#CaseTypeId', @Model.CaseTypeId, function () { $('#CaseTypeId').trigger('change') });
        });

        $('#CaseGroupIds').change(function () {
            var str = '';
            if ($('#CaseGroupIds').val() !== null && $('#CaseGroupIds').val().length > 0) {
                str = $('#CaseGroupIds').val().join(',');
            }
            $('#CaseGroupIds_text').val(str);
            requestCombo('@Url.Action("GetDDL_CaseTypes", "Ajax")', { caseGroupIds: str }, '#CaseTypeIds', @(Model.CaseTypeIds ?? "0"), function () { $('#CaseTypeIds').trigger('change') });
        });

        $('#CaseTypeIds').change(function () {
            var str = '';
            if ($('#CaseTypeIds').val() !== null && $('#CaseTypeIds').val().length > 0) {
                str = $('#CaseTypeIds').val().join(',');
            }
            $('#CaseTypeIds_text').val(str);
        });

    </script>

}


<script>
    function LoadTable() {
        if ($("#DateFrom").val() == '' && $("#DateTo").val() == '' && $("#CaseYear").val() == '') {
            return messageHelper.ShowErrorMessage('Попълнете от дата до дата или година', messageContainer);
        }
        if ($.fn.dataTable.isDataTable('#mainTable')) {
            refreshTable('#mainTable');
        }
        else {
            $('#mainTable').DataTable({
                ajax: {
                    "url": "@Url.Action("ListData")",
                    "type": "POST",
                    "datatype": "json",
                    "data": function (d) {
                        d.model = {
                            DateFrom: $("#DateFrom").val(),
                            DateTo: $("#DateTo").val(),
                            //CaseGroupId: $("#CaseGroupId").val(),
                            CaseStateId: $("#CaseStateId").val(),
                            //CaseTypeId: $("#CaseTypeId").val(),
                            CaseCodeId: $("#CaseCodeId").val(),
                            RegNumber: $("#RegNumber").val(),
                            CaseYear: $("#CaseYear").val(),
                            DocumentNumber: $("#DocumentNumber").val(),
                            JudgeReporterId: $("#JudgeReporterId").val(),
                            CaseClassificationId: $("#CaseClassificationId").val(),
                            CourtDepartmentId: $("#CourtDepartmentId").val(),
                            CourtDepartmentOtdelenieId: $("#CourtDepartmentOtdelenieId").val(),
                            CaseGroupIds_text: $('#CaseGroupIds_text').val(),
                            CaseTypeIds_text: $('#CaseTypeIds_text').val()
                        };
                    }
                },
                filter:false,
                columns: [
                    {
                        name: 'regNumber',
                        data: 'regNumber',
                        title: 'Номер на дело',
                        "render": function (item, type, row, meta) {
                            var url = '@(Url.Action("CasePreview", "Case",new { id = 666}))';
                            url = url.replace('666', row.id);
                            return "<a style='cursor: pointer;' data-toggle='tooltip' title='Преглед' href=" + url + ">" + row.regNumber + "</a>";
                        },
                        sortable: true,
                        searchable: true
                    },
                    {
                        name: 'regDate',
                        data: 'regDate',
                        title: 'Дата',
                        sortable: true,
                        searchable: true,
                        render: function (data) {
                            return moment(data).format("DD.MM.YYYY");
                        }
                    },
                    {
                        name: 'caseTypeLabel',
                        data: 'caseTypeLabel',
                        title: 'Точен вид',
                        sortable: true,
                        searchable: false
                    },
                    {
                        name: 'judgeReport',
                        data: 'judgeReport',
                        title: 'Съдия-докладчик',
                        sortable: true,
                        searchable: true
                    },
                    {
                        name: 'departmentOtdelenieText',
                        data: 'departmentOtdelenieText',
                        title: 'Отделение/Състав',
                        sortable: true,
                        searchable: true
                    },
                    {
                        name: 'caseCodeLabel',
                        data: 'caseCodeLabel',
                        title: 'Шифри',
                        sortable: true,
                        searchable: false
                    },
                    {
                        name: 'processPriorityLabel',
                        data: 'processPriorityLabel',
                        title: 'Вид производство',
                        sortable: true,
                        searchable: false
                    },
                    {
                        name: 'caseStateLabel',
                        data: 'caseStateLabel',
                        title: 'Статус',
                        sortable: true,
                        searchable: false
                    },
                    {
                        name: 'actions',
                        data: "id",
                        title: "",
                        width: 100,
                        sortable: false,
                        searchable: false,
                        className: "text-center noExport",
                        "render": function (value) {
                            return TemplateToHtml('#templateEdit', value);
                        }
                    }
                ]
            });
        }
    }
</script>

