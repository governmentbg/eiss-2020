@using IOWebApplication.Infrastructure.Models.ViewModels
@model CaseFilter

@{
    ViewData["Title"] = "Дела с непълен съдебен състав";
}

@section breadcrumb{
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","Home")" title="Начало"><i class="fa fa-home"></i></a></li>
        <li class="active">@ViewData["Title"]</li>
    </ol>
}

<div class="row">
    <div class="col-lg-3">
        @Html.EditorFor(m => m.DateFrom, "DateTime")
    </div>
    <div class="col-lg-3">
        @Html.EditorFor(m => m.DateTo, "DateTime")
    </div>
    <div class="col-lg-3">
        @Html.EditorFor(m => m.CaseYear, "DateTimeYear")
    </div>
</div>
<div class="row">
    <div class="col-lg-3">@Html.EditorFor(x => x.CaseGroupId, "GenericDropDown")</div>
    <div class="col-lg-3">@Html.EditorFor(x => x.CaseTypeId, "GenericDropDown")</div>
    <div class="col-lg-3">@Html.EditorFor(x => x.RegNumber)</div>
    <div class="col-lg-3">@Html.EditorFor(x => x.DocumentNumber)</div>
</div>

<div class="row">
    <div class="col-md-6 text-left pb-15">
        <button type="button" class="btn btn-primary" id="btnFilter" onclick="LoadTable()" value="Филтриране" title="Филтриране">
            Филтриране
            <i class="fa fa-search" title="Търсене"></i>
        </button>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 col-md-12">
        <table id="mainTable" class="table table-hover table-striped"></table>
    </div>
</div>

<script>
    function LoadTable() {
        if ($("#DateFrom").val() == '' && $("#DateTo").val() == '' && $("#CaseYear").val() == '') {
            return messageHelper.ShowErrorMessage('Попълнете от дата до дата или година', messageContainer);
        }

        if ($.fn.dataTable.isDataTable('#mainTable')) {
            refreshTable('#mainTable');
        }
        else {
            $('#mainTable').DataTable({
                ajax: {
                    "url": "@Url.Action("ListDataForSelection")",
                    "type": "POST",
                    "datatype": "json",
                    "data": function (d) {
                        d.model = {
                            DateFrom: $("#DateFrom").val(),
                            DateTo: $("#DateTo").val(),
                            CaseGroupId: $("#CaseGroupId").val(),
                            CaseTypeId: $("#CaseTypeId").val(),
                            RegNumber: $("#RegNumber").val(),
                            CaseYear: $("#CaseYear").val(),
                            DocumentNumber: $("#DocumentNumber").val()
                        };
                    }
                },
                filter: false,
                columns: [
                    {
                        name: 'regNumber',
                        data: 'regNumber',
                        title: 'Номер на дело',
                        "render": function (item, type, row, meta) {
                            var url = '@(Url.Action("CasePreview", "Case",new { id = 666}))';
                            url = url.replace('666', row.id);
                            return "<a style='cursor: pointer;' data-toggle='tooltip' title='Преглед' href=" + url + ">" + row.regNumber + "</a>";
                        },
                        sortable: true,
                        searchable: true
                    },
                    {
                        name: 'regDate',
                        data: 'regDate',
                        title: 'Дата',
                        sortable: true,
                        searchable: true,
                        render: function (data) {
                            return moment(data).format("DD.MM.YYYY");
                        }
                    },
                    {
                        name: 'caseTypeLabel',
                        data: 'caseTypeLabel',
                        title: 'Точен вид',
                        sortable: true,
                        searchable: false
                    },
                    {
                        name: 'caseCodeLabel',
                        data: 'caseCodeLabel',
                        title: 'Шифри',
                        sortable: true,
                        searchable: false
                    },
                    {
                        name: 'processPriorityLabel',
                        data: 'processPriorityLabel',
                        title: 'Вид производство',
                        sortable: true,
                        searchable: false
                    },
                    {
                        name: 'caseStateLabel',
                        data: 'caseStateLabel',
                        title: 'Статус',
                        sortable: true,
                        searchable: false
                    },
                    {
                        name: 'actions',
                        data: "id",
                        title: "",
                        width: 100,
                        sortable: false,
                        searchable: false,
                        className: "text-center noExport",
                        "render": function (value) {
                            return TemplateToHtml('#templateEdit', value);
                        }
                    }
                ]
            });
        }
    }
</script>
@section scripts {
    <script>
        $(document).ready(function () {
            $('#CaseGroupId').trigger('change');
        });

        $('#CaseGroupId').change(function () {
            requestCombo('@Url.Action("GetDDL_CaseType","Ajax")', { CaseGroupId: $(this).val() }, '#CaseTypeId', @Model.CaseTypeId, function () { $('#CaseTypeId').trigger('change') });
        });

    </script>

    <script id="templateEdit" type="text/x-handlebars-template">
        <div class="row">
            <a href="@Url.Action("CasePreview")/{{this}}" class="btn btn-def btn-sm" title="Преглед"><i class="fa fa-eye"></i><span class="hidden-sm hidden-xs"></span></a>
            @*<a href="@Url.Action("CaseFolder")/{{this}}" class="btn btn-success btn-sm" title="Обобщена информация"><i class="fa fa-info-circle"></i><span class="hidden-sm hidden-xs"></span></a>*@
            <a href="@Url.Action("Index","CaseSelectionProtokol")?id={{this}}" class="btn btn-info btn-sm" title="Протоколи от разпределение"><i class="fa fa-random"></i><span class="hidden-sm hidden-xs"></span></a>
        </div>
    </script>
}
