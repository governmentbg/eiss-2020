@{
    ViewData["Title"] = "Съдебни дела за архивиране";
}

@section breadcrumb{
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","Home")" title="Начало"><i class="fa fa-home"></i></a></li>
        <li class="active">@ViewData["Title"]</li>
    </ol>
}

<div class="row">
    <div class="col-lg-12 col-md-12">
        <table id="mainTable" class="table table-hover table-striped"></table>
    </div>
</div>

@section scripts {
    <script>
        $(function () {
            var table = $('#mainTable').DataTable({
                ajax: {
                    "url": "@Url.Action("ListDataCaseForArchive")",
                    "type": "POST",
                    "datatype": "json",
                    "data": function (d) {
                    }
                },
                columns: [
                    {
                        name: 'caseTypeLabel',
                        data: 'caseTypeLabel',
                        title: 'Точен вид',
                        sortable: true,
                        searchable: false
                    },
                    {
                        name: 'regDate',
                        data: 'regDate',
                        title: 'Дата',
                        sortable: true,
                        searchable: true,
                        render: function (data) {
                            return moment(data).format("DD.MM.YYYY");
                        }
                    },
                    {
                        name: 'regNumber',
                        data: 'regNumber',
                        title: 'Пълен номер',
                        sortable: true,
                        searchable: true,
                        "render": function (a, b, item, d) {
                            return TemplateToHtml('#templateCase', item);
                        }
                    },
                    {
                        name: 'shortRegNumber',
                        data: 'shortRegNumber',
                        title: 'Кратък номер',
                        sortable: true,
                        searchable: true
                    },
                    {
                        name: 'caseStateLabel',
                        data: 'caseStateLabel',
                        title: 'Статус',
                        sortable: true,
                        searchable: false
                    },
                    {
                        name: 'actions',
                        data: "id",
                        title: "",
                        width:100,
                        sortable: false,
                        searchable: false,
                        className: "text-center noExport",
                        "render": function (value) {
                            return TemplateToHtml('#templateEdit', value);
                        }
                    }
                ]
            });
        });
    </script>

    <script id="templateEdit" type="text/x-handlebars-template">
        <div class="row">
            <a href="@Url.Action("Add")?caseId={{this}}" class="btn btn-warning btn-sm" title="Архивиране"><i class="fa fa-edit"></i><span class="hidden-sm hidden-xs"> Архивиране</span></a>
        </div>
    </script>

    <script id="templateCase" type="text/x-handlebars-template">
        {{#if id}}
        <a href="@Url.Action("CasePreview","Case")/{{id}}" target="_blank" title="Преглед дело">{{regNumber}}</a>
        {{/if}}
    </script>
}
